<body>
  <h1>üå¶Ô∏è Weather App</h1>
  <div id="app">
    <input id="city" type="text" placeholder="Enter city name" />
    <button onclick="getWeather()">Get Weather</button>
    <div id="result"></div>
  </div>

  <script>
    async function getWeather() {
      const city = document.getElementById('city').value.trim();
      const result = document.getElementById('result');
      if (!city) return result.innerHTML = "<div class='error'>Enter a city name!</div>";

      result.textContent = "Loading...";
      try {
        const res = await fetch(`https://wttr.in/${city}?format=j1`);
        const data = await res.json();
        const c = data.current_condition[0];
        result.innerHTML = `
          üåç ${city}<br>
          üå°Ô∏è Temp: ${c.temp_C} ¬∞C<br>
          ‚òÅÔ∏è ${c.weatherDesc[0].value}<br>
          üíß Humidity: ${c.humidity}%
        `;
        localStorage.setItem("lastCity", city);
      } catch (e) {
        result.innerHTML = "<div class='error'>City not found!</div>";
      }
    }

    // Auto-load last searched city
    window.onload = () => {
      const last = localStorage.getItem("lastCity");
      if (last) {
        document.getElementById('city').value = last;
        getWeather();
      }
    };
  </script>
</body>
</html>
